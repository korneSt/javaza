<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/number_displayer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text=""
        android:textColor="#00FF00"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/settings_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_displayer_textview"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ile_liczb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ile liczb" />

        <EditText
            android:id="@+id/max_liczba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="max liczba" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_algorytm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/settings_panel"
        android:layout_marginTop="39dp" >
    </ListView>

</RelativeLayout>